.Tab .fav {
  order: 0;
}


.Tab .title {
  padding-left: 5px;
}

.Tab .close {
  right: px;
}

.Tab[data-discarded="true"] .body {
    opacity: 0.37;
}
.Tab[data-discarded="true"] > .body > .fav,
.Tab[data-discarded="true"] > .body > .t-box {
    opacity: 1;
}

.Tab[data-discarded="true"] .title {
  color: rgba(255, 255, 255, 0.55);}

.Tab[data-unread="true"] .title {
  font-style: italic;}
